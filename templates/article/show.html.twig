{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ asset('uploads/') ~article.image}}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ article.creationDate ? article.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ article.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}


{% endblock %}
