{% extends 'front.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id avis</th>
                <th>Nom</th>

                <th>Date_com</th>
                <th>Comm_avis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.avis.id }}</td>
                <td>{{ app.user.nom }}</td>
                <td>{{ commentaire.dateCom ? commentaire.dateCom|date('Y-m-d') : '' }}</td>
                <td>{{ commentaire.commAvis }}</td>
                <td>
                    <a href="{{ path('commentaire_show', {'id': commentaire.id}) }}">show</a>

                    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                    <a href="{{ path('commentaire_delete', {'id': commentaire.id}) }}">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentaire_new') }}">Create new</a>
    <div class="mt-5">
        {{ knp_pagination_render(commentaires, 'pagination.html.twig') }}
    </div>
{% endblock %}
